<%layout("/layouts/boillerplate")%>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">Login</h1>
        <div class="col-6 offset-3">
            <form method="POST" action="/login" class="needs-validation" novalidate>
                <div class="mb-3">
                  <label for="username" class="form-label ">Title</label>
                  <input name="username" type="text" id="username" class="form-control " required />
                </div>
                <div class="mb-3">
                  <label for="password" class="form-label ">Password</label>
                  <input name="password" type="password" id="password" class="form-control " required />
                </div>
                <button class="btn btn-dark add-btn mb-3" >Login</button>
                </form>
        </div>
    </div>